<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dk.myapplication1.NewActivity2">

    <Button
        android:id="@+id/button123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/CommentView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@+id/nameView"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/comment1"
        android:layout_width="219dp"
        android:layout_height="83dp"
        android:ems="10"
        android:inputType="textShortMessage"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@+id/CommentView"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ivalue1"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/ivalue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/date2"
        app:layout_constraintLeft_toRightOf="@+id/IvalueView"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/clear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/comment1"
        app:layout_constraintLeft_toRightOf="@+id/button123"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/nameView"
        android:layout_width="92dp"
        android:layout_height="44dp"
        android:text="Name"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/CvalueView"
        android:layout_width="87dp"
        android:layout_height="43dp"
        android:text="Date"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nameView" />

    <TextView
        android:id="@+id/IvalueView"
        android:layout_width="87dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="monthly charge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CvalueView" />

    <TextView
        android:id="@+id/CommentView"
        android:layout_width="89dp"
        android:layout_height="73dp"
        android:text="Comments"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/IvalueView" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="@string/pick_date"
        android:onClick="showDatePickerDialog"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/name1"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/CvalueView"
        app:layout_constraintRight_toRightOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/name1" />

</android.support.constraint.ConstraintLayout>

